<!DOCTYPE html>
<html ng-app="lifeShareCare">
<head >
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>AdminLTE 2 | Registration</title>
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
  <link rel="stylesheet" href="/stylesheets/AdminLTE.min.css">
  <link rel="stylesheet" href="/stylesheets/icheck/square/blue.css">
  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->


  <script src="/javascripts/js/angular.min.js" type="text/javascript"></script>        
  <script src="/javascripts/js/angular-ui-router.min.js" type="text/javascript"></script>
  <script src="/javascripts/js/jquery-2.2.3.min.js" type="text/javascript"></script>
  <script src="/javascripts/js/bootstrap.min.js" type="text/javascript"></script>
  <script src="/javascripts/js/icheck.min.js" type="text/javascript"></script>
  <script src="/javascripts/routes/app.js" type="text/javascript"></script>
  <script src="/javascripts/constants.js" type="text/javascript"></script>
  <script src="/javascripts/communication.js" type="text/javascript"></script>
  <script src="/modules/agency/register/controller.js" type="text/javascript"></script>
  <script src="/modules/agency/register/service.js" type="text/javascript"></script>


</head>
<body class="hold-transition login-page" ng-controller="agencyRegCtrl">
<div class="login-box">
  <div class="login-logo">
   <b>ShareCare</b>App
  </div>

  <div class="login-box-body">
        <p class="login-box-msg"> Welcome <% if (data) { %>  <%= data.name %>   <% } %>  </p>

    <form  name="register"  novalidate>
      <div role="alert" class="alert alert-success alert-dismissible fade in" ng-if="msg">
          <button aria-label="Close" data-dismiss="alert" class="close" type="button">
              <span aria-hidden="true">×</span>
          </button>
             <p>{{msg}}</p>
      </div>
      <div role="alert" class="alert alert-danger alert-dismissible fade in" ng-if="errorMsg">
          <button aria-label="Close" data-dismiss="alert" class="close" type="button">
              <span aria-hidden="true">×</span>
          </button>
             <p>{{errorMsg}}</p>
      </div>
      <div class="form-group has-feedback">
        <input type="text" name="username" ng-model="user.username" class="form-control" placeholder="username" required>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <span class="help-block" ng-if="register.username.$invalid && register.username.$touched">Please enter First Name.</span>
      </div>
      <!--<div class="form-group has-feedback">-->
      <!--  <input type="text" name="last_name" ng-model="user.last_name" class="form-control" placeholder="Last Name" required>-->
      <!--  <span class="glyphicon glyphicon-envelope form-control-feedback"></span>-->
      <!--  <span class="help-block" ng-if="register.last_name.$invalid && register.last_name.$touched">Please enter Last Name.</span>-->
      <!--</div>-->

      <div class="form-group has-feedback">
        <input type="password" name="password" ng-model="user.password" class="form-control" placeholder="Password" required>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <span class="help-block" ng-if="register.password.$invalid && register.password.$touched">Please enter Password.</span>
      </div>

      <div class="form-group has-feedback">
        <input type="password" name="confirmpassword" ng-model="user.confirmpassword" class="form-control" placeholder="Confirm Password" required>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <span class="help-block" ng-if="register.confirmpassword.$invalid && (user.confirmpassword !== user.password || register.confirmpassword.$touched)" >Please enter Confirm Password.</span>
      </div>
      
      <div class="form-group has-feedback">
        <input type="text" name="phno" ng-model="user.phno" class="form-control" placeholder="Contact Number" required phone-input>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
     
      <div class="row">
        <div class="col-xs-12">
          <button type="submit" class="btn btn-primary btn-block btn-flat" ng-click="registerAgency('<%= data.email %>','<%= data.name %>','<%= data.inviteId %>')" ng-disabled="register.$invalid || user.confirmpassword !== user.password">Confirm</button>
        </div>
      </div>
    </form>
    <!-- <a href="#">I forgot my password</a><br> -->
  </div>
</div>
</body>
</html>
